{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "JAMRA",
  "version": "1.0.0",
  "identifier": "com.jamra.reader",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build:app && pnpm bundle:server",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build/frontend"
  },
  "app": {
    "windows": [
      {
        "title": "JAMRA",
        "fullscreen": false,
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": ["icons/icon.ico"],
    "resources": {
      "../build/server-bundle": "server-bundle",
      "../resources": "resources",
      "../packages/server/src/sdk": "packages/server/src/sdk",
      "../build/node-runtime": "node-runtime"
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "nsis": {
        "installMode": "both",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma",
        "startMenuFolder": "JAMRA"
      },
      "wix": {
        "language": ["en-US"]
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  },
  "plugins": {}
}
