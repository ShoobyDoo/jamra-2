{
  "name": "jamra",
  "private": true,
  "version": "1.0.0",
  "description": "A full-featured, free, open-source Manga Reader app",
  "author": {
    "name": "ShoobyDoo"
  },
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:server\" --names \"frontend,backend \" --prefix-colors \"cyan,magenta\" --kill-others",
    "dev:frontend": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "build": "pnpm run build:frontend && pnpm run build:server",
    "build:frontend": "tsc -b && vite build",
    "build:extensions": "pnpm tsc -p tsconfig.extensions.json",
    "build:server": "pnpm run build:extensions && pnpm --filter jamra-server run build",
    "db:rebuild": "electron-rebuild -f -w better-sqlite3",
    "test:extensions": "pnpm run build:server && pnpm --filter jamra-server run test:extensions",
    "build:clean": "rm -rf dist dist-electron out server/dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "pnpm build && electron-rebuild -f -w better-sqlite3 && electron-builder",
    "dist:win": "pnpm run dist -- --win",
    "dist:mac": "pnpm run dist -- --mac",
    "dist:linux": "pnpm run dist -- --linux",
    "make": "pnpm run dist:win"
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.6",
    "@mantine/core": "^8.3.6",
    "@mantine/dates": "^8.3.6",
    "@mantine/dropzone": "^8.3.6",
    "@mantine/hooks": "^8.3.6",
    "@mantine/notifications": "^8.3.6",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/react-query": "^5.90.6",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "domhandler": "^5.0.3",
    "express": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.5",
    "tailwindcss": "^4.1.16",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.39.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^38.5.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "electron-winstaller",
      "esbuild",
      "sharp"
    ]
  }
}
