{
  "name": "jamra",
  "private": true,
  "version": "1.0.0",
  "description": "A full-featured, free, open-source Manga Reader app",
  "author": {
    "name": "ShoobyDoo"
  },
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:server\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\" --kill-others",
    "desktop": "tauri dev",
    "tauri:dev": "pnpm desktop",
    "tauri:build": "node scripts/run-tauri-build.js",
    "rebuild:native": "pnpm rebuild better-sqlite3",
    "postinstall": "pnpm run rebuild:native",
    "dev:frontend": "vite",
    "dev:server": "pnpm run rebuild:native && pnpm --filter jamra-server run dev",
    "build": "pnpm tauri:build",
    "build:app": "pnpm run build:contracts && pnpm run build:frontend:compile && pnpm run build:server:compile",
    "build:frontend": "pnpm run build:contracts && pnpm run build:frontend:compile",
    "build:frontend:compile": "tsc -b && vite build",
    "build:server": "pnpm run build:contracts && pnpm run typecheck:extensions && pnpm run build:server:compile",
    "build:server:compile": "pnpm --filter jamra-server run build",
    "bundle:server": "node scripts/bundle-server.js && node scripts/bundle-node-runtime.js",
    "build:contracts": "pnpm --filter @jamra/contracts run build",
    "build:nsis": "node scripts/run-tauri-build.js --bundles nsis",
    "build:msi": "node scripts/run-tauri-build.js --bundles msi",
    "build:portable": "node scripts/run-tauri-build.js --no-bundle && node scripts/create-portable-zip.js",
    "build:all": "node scripts/run-tauri-build.js && node scripts/create-portable-zip.js",
    "typecheck:extensions": "pnpm tsc -p tsconfig.extensions.json",
    "test:extensions": "pnpm run build:server && pnpm --filter jamra-server run test:extensions",
    "test": "vitest run --pool threads",
    "test:integration": "vitest run --config vitest.integration.config.ts --pool threads",
    "clean": "rm -rf build out packages/server/dist src-tauri/target src-tauri/gen",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "engines": {
    "node": ">=24",
    "pnpm": "10.22.0"
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.7",
    "@mantine/core": "^8.3.7",
    "@mantine/dates": "^8.3.7",
    "@mantine/dropzone": "^8.3.7",
    "@mantine/form": "^8.3.7",
    "@mantine/hooks": "^8.3.7",
    "@mantine/notifications": "^8.3.7",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.9",
    "@tauri-apps/api": "^2.9.0",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "domhandler": "^5.0.3",
    "esbuild": "^0.25.12",
    "express": "^5.1.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.6",
    "tailwindcss": "^4.1.17",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jamra/contracts": "workspace:*",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tauri-apps/cli": "^2.9.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "4.0.9",
    "@vitest/ui": "^4.0.9",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "msw": "^2.12.2",
    "pino": "^9.14.0",
    "pino-roll": "^1.3.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sharp": "^0.34.5",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.9"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "msw",
      "sharp"
    ]
  }
}
