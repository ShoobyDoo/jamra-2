{
  "compilerOptions": {
    "composite": true,
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2023"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../../src/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../**/*.test.*"
  ]
}
