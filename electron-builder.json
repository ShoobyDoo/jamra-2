{
  "appId": "com.jamra.mangareader",
  "productName": "Jamra Manga Reader",
  "publish": null,
  "directories": {
    "output": "dist-electron-build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "server/dist/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "server/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "server/src/database/schema.sql",
      "to": "schema.sql"
    }
  ],
  "electronDownload": {
    "cache": ".electron-cache"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "portable",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.png"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
